@model CatalogDomain.Model.Genre

@{
    ViewData["Title"] = "Details";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="mb-0">Genre</h1>
    <div class="d-flex gap-2">
        <div class="mt-auto d-flex gap-2">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary w-100" style="min-width: 100px">Edit</a>
            <a asp-action="Index" class="btn btn-outline-secondary w-100" style="min-width: 100px">Back</a>
        </div>
    </div>
</div>

<div class="row g-4">
    <div class="col-lg-8">
        <div class="card shadow-sm">
            <div class="card-body"
                <dl class="row mb-0">
                    <dt class="col-sm-3">Genre Name</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(m => m.GenreName)</dd>

                    @* <dt class="col-sm-3">Movies in this Genre</dt>
                    <dd class="col-sm-9">
                        @if (Model.MovieGenres != null && Model.MovieGenres.Any())
                        {
                            <ul class="list-unstyled">
                                @foreach (var mg in Model.MovieGenres)
                                {
                                    <li>@mg.Movie.Title (@mg.Movie.Year)</li>
                                }
                            </ul>
                        }
                        else
                        {
                            <span class="text-muted">No movies in this genre</span>
                        }
                    </dd> *@
                </dl>
            </div>
        </div>
    </div>
</div>