@model CatalogDomain.Model.Movie

@{
    ViewData["Title"] = "Movie Details";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="mb-0">@Model.Title <small class="text-muted">@Model.Year</small></h1>
    <div class="d-flex gap-2">
        <div class="mt-auto d-flex gap-2">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary w-100" style="min-width: 100px">Edit</a>
            <a asp-action="Index" class="btn btn-outline-secondary w-100" style="min-width: 100px">Back</a>
        </div>
    </div>
</div>

<div class="row g-4">
    <div class="col-lg-8">
        <div class="card shadow-sm">
            <div class="card-body">
                <h5 class="card-title">Section title</h5>
                
                <dl class="row mb-0">
                    <dt class="col-sm-3">Title</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(m => m.Title)</dd>

                    <dt class="col-sm-3">Year</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(m => m.Year)</dd>

                    <dt class="col-sm-3">Description</dt>
                    <dd class="col-sm-9">
                        @if (!string.IsNullOrWhiteSpace(Model.Description))
                        {
                            <p class="mb-0 text-body-secondary">@Model.Description</p>
                        }
                        else
                        {
                            <span class="text-muted">—</span>
                        }
                    </dd>

                    <dt class="col-sm-3">Length</dt>
                    <dd class="col-sm-9">
                        @if (Model.MovieLength > 0)
                        {
                            @($"{Model.MovieLength} min")
                        }
                        else
                        {
                            <span class="text-muted">—</span>
                        }
                    </dd>

                    <dt class="col-sm-3">Poster URL</dt>
                    <dd class="col-sm-9">
                        @if (!string.IsNullOrWhiteSpace(Model.Poster))
                        {
                            <a href="@Model.Poster" target="_blank" rel="noopener">@Model.Poster</a>
                        }
                        else
                        {
                            <span class="text-muted">—</span>
                        }
                    </dd>
                </dl>
            </div>
        </div>
    </div>

    <div class="row g-4 mt-1">
        <!-- Genres -->
        <div class="col-md-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <h6 class="card-title">Genres</h6>
                    @if (Model.MovieGenres != null && Model.MovieGenres.Any())
                    {
                        <div class="d-flex flex-wrap gap-2">
                            @foreach (var mg in Model.MovieGenres)
                            {
                                <span class="badge bg-secondary">@mg.Genre.GenreName</span>
                            }
                        </div>
                    }
                    else
                    {
                        <span class="text-muted">No genres assigned</span>
                    }
                </div>
            </div>
        </div>

        <!-- Actors-->
        <div class="col-md-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <h6 class="card-title">Actors</h6>
                    @if (Model.MovieCasts != null && Model.MovieCasts.Any())
                    {
                        <div class="d-flex flex-wrap gap-2">
                            @foreach (var c in Model.MovieCasts)
                            {
                                <span class="badge bg-info text-dark">@c.Actor.FullName</span>
                            }
                        </div>
                    }
                    else
                    {
                        <span class="text-muted">No actors assigned</span>
                    }
                </div>
            </div>
        </div>

        <!-- Directors -->
        <div class="col-md-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <h6 class="card-title">Directors</h6>
                    @if (Model.DirectedBies != null && Model.DirectedBies.Any())
                    {
                        <div class="d-flex flex-wrap gap-2">
                            @foreach (var d in Model.DirectedBies)
                            {
                                <span class="badge bg-dark">@d.Director.FullName</span>
                            }
                        </div>
                    }
                    else
                    {
                        <span class="text-muted">No directors assigned</span>
                    }
                </div>
            </div>
        </div>

    </div>


    <!-- RIGHT: poster / quick info -->
    <div class="col-lg-4">
        <div class="card h-100 shadow-sm">
            <div class="card-body d-flex flex-column">
                <h5 class="card-title">Poster</h5>
                <div class="border rounded d-flex align-items-center justify-content-center p-2 mb-3" style="min-height: 320px;">
                    @if (!string.IsNullOrWhiteSpace(Model.Poster))
                    {
                        <img src="@Model.Poster" alt="@Model.Title poster" class="img-fluid rounded" />
                    }
                    else
                    {
                        <span class="text-muted">No poster</span>
                    }
                </div>
            </div>

        </div>
    </div>
</div>

