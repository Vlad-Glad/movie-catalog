@model CatalogDomain.Model.Movie

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Movie</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Year)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Year)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.MovieLength)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MovieLength)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Poster)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Poster)
        </dd>

        <div class="row">
            <!-- Genres -->
            <div class="col-md-4">
                <h5>Genres</h5>
                @if (Model.MovieGenres != null && Model.MovieGenres.Any())
                {
                    <ul class="list-unstyled">
                        @foreach (var genre in Model.MovieGenres)
                        {
                            <li>• @genre.Genre.GenreName</li>
                        }
                    </ul>
                }
                else
                {
                    <p>No genres assigned.</p>
                }
            </div>

            <!-- Actors -->
            <div class="col-md-4">
                <h5>Actors</h5>
                @if (Model.MovieCasts != null && Model.MovieCasts.Any())
                {
                    <ul class="list-unstyled">
                        @foreach (var cast in Model.MovieCasts)
                        {
                            <li>• @cast.Actor.FullName</li>
                        }
                    </ul>
                }
                else
                {
                    <p>No actors assigned.</p>
                }
            </div>

            <!-- Directors -->
            <div class="col-md-4">
                <h5>Directors</h5>
                @if (Model.DirectedBies != null && Model.DirectedBies.Any())
                {
                    <ul class="list-unstyled">
                        @foreach (var director in Model.DirectedBies)
                        {
                            <li>• @director.Director.FullName</li>
                        }
                    </ul>
                }
                else
                {
                    <p>No directors assigned.</p>
                }
            </div>
        </div>

    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-sm btn-outline-danger" /> |
        <a asp-action="Index" class="btn btn-sm btn-outline-primary">Back to List</a>
    </form>
</div>
